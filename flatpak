
# Ce script installe des logiciels avec Flatpak - Fonctionne avec toutes les distros qui ont Flatpak install√©e

installDiscord() {
	flatpak install -y flathub com.discordapp.Discord
}
installSublimeText() {
	flatpak install -y flathub com.sublimetext.three
}
installIntelliJ() {
	flatpak install -y flathub com.jetbrains.IntelliJ-IDEA-Community	
}
installEclipse() {
	flatpak install -y flathub org.eclipse.Java
}
installAtom() {
	flatpak install -y flathub io.atom.Atom
}
installVisualStudioCode() {
	flatpak install -y flathub com.visualstudio.code.oss
}
installMinecraft() {
	flatpak install -y flathub com.mojang.Minecraft
}
installTor() {
	flatpak install -y flathub com.github.micahflee.torbrowser-launcher
}
installSteam() {
	flatpak install -y flathub com.valvesoftware.Steam
}
installDConfEditor() {
	flatpak install -y ca.desrt.dconf-editor
}
installVim() {
	flatpak install -y org.vim.Vim
}
installLibreOffice() {
	flatpak install -y org.libreoffice.LibreOffice
}
installQbitTorrent() {
	flatpak install -y org.qbittorrent.qBittorrent
}
installVLC() {
	flatpak install -y org.videolan.VLC 
}
installKlavaro() {
	flatpak install -y flathub net.sourceforge.Klavaro
}